{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build debug",
            "type": "shell",
            "windows": {
                "command": "./build.ps1",
                "args": [
                    "-NoRun",
                    "-Debug"
                ],
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "build release",
            "type": "shell",
            
            "windows": {
                "command": "./build.ps1",
                "args": [
                    "-NoRun"
                ]
            },
            "group": "build"
        }
    ]
}